<h1>Tasks</h1>
<%= link_to 'add a task', new_task_path %>
<table>
  <tr>
    <th></th>
    <th>to do</th>
    <th></th>
  </tr>
 
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.text %></td>
      <td><%= link_to 'Show', task_path(task) %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Delete', task_path(task),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete?' } %></td>
    </tr>
  <% end %>
</table>